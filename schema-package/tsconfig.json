{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022", 
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
     "paths": {
      "$amplify/*": ["../.amplify/generated/*"]
    }
  },
  "include": ["src/**/*", "../amplify/**/*", "../.amplify/**/*"]
}